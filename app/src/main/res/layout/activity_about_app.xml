<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.about.AboutAppActivity">

    <LinearLayout
        android:id="@+id/ly_about_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <LinearLayout
            android:id="@+id/ly_about_1_sub1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic__android"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="App name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Dermanosis"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_about_1_sub2"
            android:layout_width="150dp"
            android:layout_marginStart="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_info"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="App version"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="V.1.0"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_about_2"
        android:layout_below="@id/ly_about_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <LinearLayout
            android:id="@+id/ly_about_2_sub1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_phone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Required OS"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Android 5.0 and up"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_about_2_sub2"
            android:layout_width="150dp"
            android:layout_marginStart="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_release"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Deployed on"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Jun 11,2022"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>